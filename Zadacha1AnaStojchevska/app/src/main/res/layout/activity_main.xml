<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="412dp"
        android:layout_height="223dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#6b6b47"
            android:paddingTop="8dp"
            android:text="Favorite Twitter Searches"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Enter Twitter search query here"
            android:textColor="#C0C0C0"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="570dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="270dp"
                android:layout_height="58dp"
                android:text="Tag your query"
                android:textColor="#C0C0C0"
                android:textSize="25sp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:backgroundTint="#A8A8A8"
                android:text="Save"
                android:textColor="#000000"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:layout_marginTop="180dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#ffad33"
            android:text="Tagged Searches"
            android:textAlignment="center"
            android:textSize="30sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:background="#ffad33"
            android:columnCount="2"
            android:padding="15dp"
            android:rowCount="7">

            <Button
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#A8A8A8"
                android:text="AndroidFP"
                android:textColor="#000000"
                android:textSize="22sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#A8A8A8"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="22sp" />

            <Button
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#A8A8A8"
                android:text="Deitel"
                android:textColor="#000000"
                android:textSize="22sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#A8A8A8"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="22sp" />

            <Button
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#A8A8A8"
                android:text="Google"
                android:textColor="#000000"
                android:textSize="22sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#A8A8A8"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="22sp" />

            <Button
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#A8A8A8"
                android:text="iPhoneFP"
                android:textColor="#000000"
                android:textSize="22sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#A8A8A8"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="22sp" />

            <Button
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#A8A8A8"
                android:text="JavaFP"
                android:textColor="#000000"
                android:textSize="22sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#A8A8A8"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginRight="21dp"
                android:backgroundTint="#A8A8A8"
                android:text="JavaHTP"
                android:textColor="#000000"
                android:textSize="22sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#A8A8A8"
                android:text="Edit"
                android:textColor="#000000"
                android:textSize="22sp" />

        </GridLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:backgroundTint="#A8A8A8"
            android:text="Clear Tags"
            android:textColor="#000000"
            android:textSize="22sp"
            />
    </LinearLayout>
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Zadacha1AnaStojchevska.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>